<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.ki10v01t.PrimaryController">
   <children>
      <Label text="Copy from:" />
      <Button fx:id="sourceButton" text="Select source folder" onAction="#openSourceFolder"/>
      <Label text="Copy to"/>
      <Button fx:id="destinationButton" text="Select destination folder" onAction="#openDestinationFolder"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
